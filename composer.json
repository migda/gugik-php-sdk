{
    "name": "migda/gugik-php-sdk",
    "description": "PHP SDK for http://capap.gugik.gov.pl/api/fts/ API ",
    "keywords": [
        "migda",
        "gugik-php-sdk"
    ],
    "homepage": "https://github.com/migda/gugik-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafal Migda",
            "email": "info@loremedia.pl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 | ^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "spatie/data-transfer-object": "^2.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Migda\\GugikSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Migda\\GugikSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
